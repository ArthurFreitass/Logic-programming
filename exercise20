programa
{
    inteiro numero, i, j, soma, fatorial, a, b, c, resto, invertido, primo, cont

    inicio
        escreva("Digite um número inteiro positivo: ")
        leia(numero)

        // Verificar se o número é primo
        primo <- 1 // 1 significa que é primo até provar o contrário
        se (numero < 2) entao
            primo <- 0
        senao
            para (i <- 2; i <= numero / 2; i <- i + 1)
                se (numero % i = 0) entao
                    primo <- 0
                fimse
            fimpara
        fimse

        se (primo = 1) entao
            escreva("O número ", numero, " é primo.", "\n")
        senao
            escreva("O número ", numero, " não é primo.", "\n")
        fimse

        // Calcular a soma dos números naturais até o número
        soma <- 0
        para (i <- 1; i <= numero; i <- i + 1)
            soma <- soma + i
        fimpara
        escreva("A soma dos números naturais até ", numero, " é ", soma, "\n")

        // Exibir os primeiros N termos da sequência de Fibonacci
        escreva("Os primeiros ", numero, " termos da sequência de Fibonacci: ")
        a <- 0
        b <- 1
        escreva(a, " ", b, " ")
        para (i <- 3; i <= numero; i <- i + 1)
            c <- a + b
            escreva(c, " ")
            a <- b
            b <- c
        fimpara
        escreva("\n")

        // Inverter os dígitos do número
        invertido <- 0
        resto <- numero
        enquanto (resto > 0)
            invertido <- invertido * 10 + (resto % 10)
            resto <- resto / 10
        fimenquanto
        escreva("O número invertido é: ", invertido, "\n")

        // Calcular o fatorial do número
        fatorial <- 1
        para (i <- 1; i <= numero; i <- i + 1)
            fatorial <- fatorial * i
        fimpara
        escreva("O fatorial de ", numero, " é ", fatorial, "\n")
    fim
}
