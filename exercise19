programa
{
    funcao inicio()
    {
        inteiro numeroSecreto, palpite, tentativas = 0
        inteiro maxTentativas = 5
        
        // Gerar n√∫mero aleat√≥rio entre 1 e 50
        numeroSecreto = (inteiro)(aleatorio() * 50) + 1
        
        escreva("=== JOGO DE ADIVINHA√á√ÉO ===\n")
        escreva("Tente adivinhar o n√∫mero secreto (1-50)\n")
        escreva("Voc√™ tem ", maxTentativas, " tentativas!\n\n")
        
        enquanto (tentativas < maxTentativas) {
            tentativas++
            escreva("Tentativa ", tentativas, "/", maxTentativas, " - Digite seu palpite: ")
            leia(palpite)
            
            se (palpite == numeroSecreto) {
                escreva("\nüéâ PARAB√âNS! Voc√™ acertou em ", tentativas, " tentativa(s)!\n")
                escreva("O n√∫mero secreto era realmente ", numeroSecreto, "!\n")
                pare
            } senao se (palpite < numeroSecreto) {
                escreva("Dica: O n√∫mero secreto √© MAIOR que ", palpite, "\n\n")
            } senao {
                escreva("Dica: O n√∫mero secreto √© MENOR que ", palpite, "\n\n")
            }
        }
        
        se (tentativas == maxTentativas) {
            escreva("\nüíÄ FIM DE JOGO! Suas tentativas acabaram!\n")
            escreva("O n√∫mero secreto era: ", numeroSecreto, "\n")
        }
    }
}
