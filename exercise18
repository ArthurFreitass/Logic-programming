programa {
  funcao inicio() {
    inteiro num
    inteiro somaDivisores = 0
    escreva("Digite um número: ")
    leia(num)

    se (num <= 1) {
      escreva("O número não é perfeito")
    } senao {
      para (inteiro index = 1; index < num; index += 1) {
      se (num % index == 0) {
        somaDivisores += index
      }   
    }
      se (somaDivisores == num) {
      escreva("O número é perfeito")
    } senao {
        escreva("O número não é perfeito")
     }
    }
  }
}
