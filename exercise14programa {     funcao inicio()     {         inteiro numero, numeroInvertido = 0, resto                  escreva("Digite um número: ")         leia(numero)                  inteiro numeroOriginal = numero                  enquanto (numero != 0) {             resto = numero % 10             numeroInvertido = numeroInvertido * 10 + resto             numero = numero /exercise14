programa
{
    funcao inicio()
    {
        inteiro numero, numeroInvertido = 0, resto
        
        escreva("Digite um número: ")
        leia(numero)
        
        inteiro numeroOriginal = numero
        
        enquanto (numero != 0) {
            resto = numero % 10
            numeroInvertido = numeroInvertido * 10 + resto
            numero = numero / 10
        }
        
        escreva("Número original: ", numeroOriginal, "\n")
        escreva("Número invertido: ", numeroInvertido, "\n")
    }
}
